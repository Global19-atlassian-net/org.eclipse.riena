<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="org.eclipse.riena.core.logging.listeners" name="org.eclipse.riena.core.logging.listeners" schema="schema/org.eclipse.riena.core.logging.listeners.exsd"/>
   <extension-point id="org.eclipse.riena.core.logging.catchers" name="org.eclipse.riena.core.logging.catchers" schema="schema/org.eclipse.riena.core.logging.catchers.exsd"/>
   <extension-point id="org.eclipse.riena.core.exception.handlers" name="org.eclipse.riena.core.exception.handlers" schema="schema/org.eclipse.riena.core.exception.handlers.exsd"/>
   <extension-point id="startups" name="Startup tasks" schema="schema/startups.exsd"/>
   <extension-point id="log4jConfiguration" name="Log4j Configuration" schema="schema/log4jConfiguration.exsd"/>

	<extension
        point="org.eclipse.riena.core.startups">
      <startup 
      	requiredBundles="org.eclipse.equinox.log">
      </startup>
   </extension>

   <extension
         point="org.eclipse.riena.core.logging.listeners">
         <!-- This is examplary!
         <logListener name="Log4j" listener-class="org.eclipse.riena.core.logging.log4j.Log4jLogListener" sync="true" filter-class="org.eclipse.riena.core.logging.log4j.Log4jLogFilter"/>
         <logListener name="Syso" listener-class="org.eclipse.riena.core.logging.SysoLogListener" sync="true"/>
         -->
   </extension>
   <extension
         point="org.eclipse.riena.core.logging.catchers">
         <!-- This is examplary!
         <logCatcher name="Platform" class="org.eclipse.riena.core.logging.PlatformLogCatcher"/>
         <logCatcher name="Java" class="org.eclipse.riena.core.logging.JavaLogCatcher"/>
         -->
   </extension>
   <extension
         point="org.eclipse.riena.core.exception.handlers">
      <!-- The "!" attribute value for the before attribute makes this handler the last handler in the chain -->
      <exceptionHandler
            before="!"
            class="org.eclipse.riena.internal.core.exceptionhandler.SimpleExceptionHandler"
            name="Simple riena core handler">
      </exceptionHandler>
   </extension>
</plugin>
